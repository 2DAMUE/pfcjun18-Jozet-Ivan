<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!-- Toolbar style. -->
    <style name="DrawerIcon" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <!-- Custom application theme. -->
    <style name="CustomAppTheme" parent="AppTheme">
        <item name="android:textColorPrimaryDisableOnly">#00838f</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <!-- TextInputLayout theme. -->
    <style name="TextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <!-- Label color in TRUE state -->
        <item name="colorAccent">@color/colorAccentLight</item>
        <!-- Bar color in FALSE State -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <!-- Bar color in TRUE State -->
        <item name="colorControlActivated">@color/colorAccentLight</item>
    </style>

    <!-- Switch theme. -->
    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>
</resources>
